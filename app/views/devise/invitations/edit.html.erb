<div class="container">
  <div class="single-page">
    <h1>
      パスワードの設定をする
    </h1>

    <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form">
        <%= f.hidden_field :invitation_token, readonly: true %>

        <% if f.object.class.require_password_on_accepting %>
          <div class="field">
            <div class="label">
              <label>
                性別
              </label>
            </div>
            <%= f.radio_button :sex, :male %>
            <%= f.label :sex_male, "男性" %>
            <%= f.radio_button :sex, :female %>
            <%= f.label :sex_female, "女性" %>
          </div>
          <div class="field">
            <div class="label">
              <label>
                パスワード
              </label>
            </div>
            <%= f.password_field :password, type: "password", required: "required" %>
          </div>

          <div class="field">
            <div class="label">
              <label>
                確認用パスワード
              </label>
            </div>
            <%= f.password_field :password_confirmation, type: "password", required: "required" %>
          </div>
        <% end %>

        <div class="field">
          <div class="button-wrapper">
            <%= f.submit "ログインする", class:"app-button conversion" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>