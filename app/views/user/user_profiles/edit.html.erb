<div class="container">
  <div class="single-page">
    <h1>
      プロフィールを入力してください
    </h1>
    <%= form_with model: @user_profile, url: user_profile_path, local: true, method: :patch do |f| %>
      <div class="form">
        <div class="field">
          <div class="label">
            <label>
              名前
            </label>
          </div>
          <%= f.text_field :name, type: "text", :placeholder => "山田太郎" %>
        </div>
        <div class="field">
          <div class="label">
            <label>
              性別
            </label>
          </div>
          <%= f.radio_button :sex, :male %>
          <%= f.label :sex_male, "男性" %>
          <%= f.radio_button :sex, :female %>
          <%= f.label :sex_female, "女性" %>
        </div>
        <div class="field">
          <div class="label">
            <label>
              年齢
            </label>
          </div>
          <%= f.select :age, options_for_select((18..80).to_a), {prompt: "選択してください"} %>
        </div>
        <div class="field">
          <div class="label">
            <label>
              職業
            </label>
          </div>
          <%= f.select :job, UserProfile.jobs_i18n.keys.map { |k| [UserProfile.jobs_i18n[k], k]}, {prompt: "選択してください"} %>
        </div>

        <div class="field">
          <div class="button-wrapper">
            <%= f.submit "更新する", class:"app-button conversion" %>
          </div>
        </div>

      </div>
    <% end %>
  </div>
</div>