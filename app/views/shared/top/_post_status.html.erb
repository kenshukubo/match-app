  <% else %>
    <%= link_to "招待中", new_post_member_path, class:"top__user-status hover-opacity" %>
  <% end %>  
<% else %>
  <%= link_to "未作成", new_post_path, class:"top__user-status hover-opacity" %>
<% end %>