<div class="invited-member-list">
  <p class="invited-member-list-title">📌 招待中メンバー</p>

  <% if @invited_user_exclude_me.blank? %>
    <span>
      招待中のメンバーはいません
    </span>
  <% else %>
    <% if @unconfirmed_members.present? %>
      <ul style="margin-bottom: 16px;">
        <span class="invited-member-list-sub-title">未承認メンバー</span>
        <% @unconfirmed_members.each do |member| %>
          <li class="invited-member-item">
            <%= link_to post_member_path(member.id), method: :delete, data: { confirm: "招待した方にキャンセル通知がいきます。よろしいでしょうか？" }, class:"invite-cancel-link" do %>
              <i class="far fa-times-circle"></i>
            <% end %>
            <span class="invited-email text-ellipsis"><%= member.user.user_profile.name %></span>
          </li>
        <% end %>
      </ul>
    <% end %>

    <% if @attend_members.present? %>
      <ul style="margin-bottom: 16px;">
        <span class="invited-member-list-sub-title">参加メンバー</span>
        <% @attend_members.each do |member| %>
          <li class="invited-member-item">
            <%= link_to post_member_path(member.id), method: :delete, data: { confirm: "招待した方にキャンセル通知がいきます。よろしいでしょうか？" }, class:"invite-cancel-link" do %>
              <i class="far fa-times-circle"></i>
            <% end %>
            <span class="invited-email text-ellipsis"><%= member.user.user_profile.name %></span>
          </li>
        <% end %>
      </ul>
    <% end %>

    <% if @absent_members.present? %>
      <ul>
        <span class="invited-member-list-sub-title">不参加メンバー</span>
        <% @absent_members.each do |member| %>
          <li class="invited-member-item">
            <%= link_to post_member_path(member.id), method: :delete, data: { confirm: "招待した方にキャンセル通知がいきます。よろしいでしょうか？" }, class:"invite-cancel-link" do %>
              <i class="far fa-times-circle"></i>
            <% end %>
            <span class="invited-email text-ellipsis"><%= member.user.user_profile.name %></span>
          </li>
        <% end %>
      </ul>
    <% end %>
  <% end %>
</div>

<style>
.invited-member-list{
  background: #f3d2c1;
  border-radius: 4px;
  padding: 16px;
  margin-bottom: 36px;
}

.invited-member-list-title{
  font-weight: 700;
  margin-bottom: 16px;
}

.invited-member-list-sub-title{
  font-weight: 700;
  font-size: 14px;
}

.invited-member-item{
  display: flex;
  align-items: center;
  line-height: 24px;
}

.invited-email{
  font-size: 14px;
}
</style>